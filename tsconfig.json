{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["es2020"],
    "typeRoots": ["node_modules/@types"],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "pretty": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "allowJs": true,
    "noEmit": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "baseUrl": "./",
    "paths": {
      "/*": ["*"],
      "config": ["./config"],
      "controller/*": ["./controller"],
      "databases/*": ["databases/*"],
      "dtos/*": ["dtos/*"],
      "exceptions/*": ["exceptions/*"],
      "interfaces/*": ["interfaces/*"],
      "middleware/*": ["./middleware"],
      "models/*": ["models/*"],
      "routers/*": ["routers/*"],
      "services/*": ["services/*"],
      "utils/*": ["utils/*"]
    },
    "strict": true
  },

  "include": ["./**/*.ts", "./**/*.json", ".env"], // Add the missing inputs
  "exclude": ["node_modules", "src/http", "src/logs", "src/tests"] // Keep the existing exclude paths
}
